<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Fragments" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/berryX</item>
        <item name="colorSurface">#FEF7FF</item>
        <item name="fontFamily">@font/outfit_regular</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>

    <style name="Theme.Fragments" parent="Base.Theme.Fragments" />

    <style name="Theme.Fragments.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>

    <style name="Theme.Fragments.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fragments.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
