<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Fragments" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/berry</item>
        <item name="fontFamily">@font/outfit_regular</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
    </style>

    <style name="Theme.Fragments" parent="Base.Theme.Fragments" />

    <style name="Theme.Fragments.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BoldTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Fragments.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fragments.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_action_popup_animation">
        <item name="android:windowEnterAnimation">@anim/anim_text_action_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_text_action_popup_exit</item>
    </style>
    <style name="diagnostic_popup_animation">
        <item name="android:windowEnterAnimation">@anim/anim_diagnostic_tooltip_window_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_diagnostic_tooltip_window_exit</item>
    </style>
</resources>
